# ============================================
# REMIX ENGINE V2.0 - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED API KEYS
# ============================================

# Google Gemini API Key (REQUIRED)
# Get from: https://makersuite.google.com/app/apikey
# Free tier: 60 requests/minute, 1500/day
GEMINI_API_KEY=your_gemini_api_key_here
# Telegram Bot Token (REQUIRED for safe mode)
# Get from: @BotFather on Telegram
# Steps: 1. Message @BotFather  2. Send /newbot  3. Follow instructions
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Chat ID (REQUIRED for safe mode)
# Get chat ID: Send message to your bot, then visit:
# https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
# Look for "chat":{"id": value
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================
# OPTIONAL - DO NOT USE ON MAIN ACCOUNTS
# ============================================
# These are for auto-posting (NOT RECOMMENDED)
# Only use with burner test accounts
# Main accounts should use safe Telegram mode

# Instagram (Burner account only!)
INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=

# TikTok (Burner account only!)
TIKTOK_USERNAME=
TIKTOK_PASSWORD=

# ============================================
# V2.0 SAFETY SETTINGS
# ============================================

# Safe Mode (Telegram-first distribution)
# true = Send to Telegram, post manually (RECOMMENDED)
# false = Generate only, no distribution
SAFE_MODE=true

# Allow Automated Posting (DANGER!)
# false = No auto-posting (SAFE)
# true = Auto-post enabled (BAN RISK - burner accounts only!)
ALLOW_AUTO_POSTING=false

# Default Platform
# instagram or tiktok
DEFAULT_PLATFORM=instagram

# ============================================
# VIDEO SETTINGS
# ============================================

VIDEO_WIDTH=1080
VIDEO_HEIGHT=1920
VIDEO_FPS=30

# ============================================
# VOICE SETTINGS (V2.0)
# ============================================

# Enable Voiceovers
ENABLE_VOICEOVER=true

# Default Voice Type
# Options: tiktok_girl, tiktok_guy, storyteller, professional,
#          british_girl, british_guy, excited, calm, dramatic
DEFAULT_VOICE=tiktok_girl

# Voice Variations (more natural sound)
VOICE_RATE_VARIATION=true
VOICE_PITCH_VARIATION=false

# Voiceover Duration (seconds)
VOICEOVER_DURATION=15

# ============================================
# OVERLAY SETTINGS (V2.0)
# ============================================

# Use Pro HTML/CSS Overlays
USE_PRO_OVERLAYS=true

# Overlay Visual Style
# Options: tiktok, instagram, youtube, minimal
DEFAULT_OVERLAY_STYLE=tiktok

# Overlay Position
# Options: top, center, bottom
OVERLAY_POSITION=top

# ============================================
# HASH BREAKING (V2.0)
# ============================================

# Enable Hash Breaking (ALWAYS TRUE - prevents duplicate penalties)
ENABLE_HASH_BREAKING=true

# ============================================
# AI CONTENT SETTINGS
# ============================================

# Maximum words in hook (for voice clarity)
MAX_HOOK_WORDS=8

# Maximum caption length (characters)
CAPTION_MAX_LENGTH=150

# Number of hashtags to generate
HASHTAG_COUNT=10

# ============================================
# BATCH PROCESSING
# ============================================

# Videos to generate per daily run
DAILY_VIDEO_COUNT=3

# Images to generate per daily run
DAILY_IMAGE_COUNT=5

# ============================================
# NOTES
# ============================================

# Safe Mode Workflow:
# 1. GitHub Actions generates videos (cloud)
# 2. Sends to your Telegram
# 3. You post manually (30 seconds per video)
# 4. Add trending audio in-app
# 5. Zero ban risk, maximum reach

# Get Started:
# 1. Fill in GEMINI_API_KEY, TELEGRAM_BOT_TOKEN, TELEGRAM_CHAT_ID
# 2. Save this file as .env (remove .example)
# 3. Run: python setup_v2.py (validate)
# 4. Run: python test_v2.py (test features)
# 5. Run: python main_v2.py --mode daily (generate)

# Security:
# - Never commit .env to Git (.gitignore prevents this)
# - Keep API keys secret
# - Use app-specific passwords for Instagram
# - Rotate credentials regularly

# Support:
# - Documentation in README.md
# - Troubleshooting in GITHUB_ERRORS_SOLUTIONS.md
# - Run: python setup_v2.py to validate configuration
